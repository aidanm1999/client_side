{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/public/index.html"
      },
      {
        "source": "/index.html",
        "destination": "/public/index.html"
      }
    ]
  }
}